<script id="flight-template" type="text/x-handlebars-template">
  <li class="panel panel-default">
    <div class="panel-heading clearfix">
      <div class="fare pull-left">
        <p>Adult: {{Adult}} USD</p>
        {{#if Child}}
          <p>Children: {{Child}} USD</p>
        {{/if}}
      </div>
      <div class="book pull-right">
        <button class="btn btn-warning">
          Book
        </button>
      </div>
    </div>
    
    <div class="panel-body flight-info clearfix">
      <div class="pull-left departing">
        <h4>Departing</h4>
        <h5>Airline: {{InAirline}}</h5>        
        <p>From: {{InDepartport}}</p>
        <p>To: {{InArriveport}}</p>
        <p>Duration: {{InDuration}} hours</p>
        {{#if InAirline1}}
          <hr>
          <h5>Airline: {{InAirline1}}</h5>        
          <p>From: {{InDepartport1}}</p>
          <p>To: {{InArriveport1}}</p>
          <p>Duration: {{InDuration1}} hours</p>
        {{/if}}
      </div>
      <div class="pull-right returning">
        <h4>Returning</h4>
        <h5>Airline: {{OutAirline}}</h5>                
        <p>From: {{OutDepartport}}</p>
        <p>To: {{OutArriveport}}</p>
        <p>Duration: {{OutDuration}} hours</p>
        {{#if OutAirline1}}
          <hr>
          <h5>Airline: {{OutAirline1}}</h5>        
          <p>From: {{OutDepartport1}}</p>
          <p>To: {{OutArriveport1}}</p>
          <p>Duration: {{OutDuration1}} hours</p>
        {{/if}}
      </div>
    </div>
  </li>
</script>